<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game List</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="photon.min.css">
    <style>
        body {
            height: 100vh;
            overflow-y: auto;
            background-color: #f8f9fa;
        }
        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .card:hover {
            box-shadow: 0 0 20px rgba(33,33,33,.2);
            transform: scale(1.01);
        }
        .card-text {
            font-size: 0.9rem;
        }
        .toolbar-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-direction: row;
            gap: 0.5em;
        }
    </style>
</head>
<body>
    <header class="toolbar toolbar-header draggable">
        <div class="padded-less">
            <div class="toolbar-actions">
                <div class="btn-group">
                    <button class="btn btn-negative" id="exitWindow" title="Exit">
                        <span class="icon icon-cancel"></span>
                    </button>
                    <button class="btn btn-default" id="refreshWindow" title="Refresh">
                        <span class="icon icon-arrows-ccw"></span>
                    </button>
                </div>
                
            </div>
        </div>
    </header>
    <div class="container mt-5">
        <div class="row">
            <% games.forEach(game => { %>
                <div class="col-md-4 mb-4">
                    <div class="card" style="cursor: pointer;">
                        <img src="<%= game.medias[0].url %>" class="card-img-top" alt="<%= game.title %> screenshot" id="gameArtwork">
                        <div class="card-body">
                            <h5 class="card-title" id="gameName"><%= game.noms[0].text %></h5>
                            <p class="card-text" id="gameYear"><strong>Year:</strong> 
                                <% if (game.dates && game.dates.length > 0) { %>
                                    <% game.dates.forEach(date => { %>
                                        <% if (date.region === 'us') { %>
                                            <%= date.text ? date.text : '' %><br>
                                        <% } %>
                                    <% }); %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </p>
                            <p class="card-text" id="gameConsole"><strong>Console:</strong> <%= game.systeme.text %></p>
                            <p class="card-text" id="gameDescription"><strong>Description:</strong> 
                                <% if (game.synopsis && game.synopsis.length > 0) { %>
                                    <% game.synopsis.forEach(synopsis => { %>
                                        <% if (synopsis.langue === 'en') { %>
                                            <%= synopsis.text ? synopsis.text : '' %><br>
                                        <% } %>
                                    <% }); %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script> -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Custom JS -->
    <script>
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('click', () => {
                const result = confirm('Update game with this metadata?');
                const game = {
                    name: card.querySelector('#gameName').innerText,
                    core: card.querySelector('#gameConsole').innerText.split(':')[1].trim(), // Remove 'Console:' prefix
                    description: card.querySelector('#gameDescription').innerText.split(':')[1].trim(), // Remove 'Description:' prefix
                    artwork: card.querySelector('#gameArtwork').src,
                    path: '<%= gamePath %>'
                };
                if (result) {
                    window.api.editRom(game).then(response => {
                        alert(response);
                    }).catch(error => {
                        alert(error);
                    });
                }
            });
        });
        document.getElementById('exitWindow').addEventListener('click', () => {
            window.close();
        });
    </script>
</body>
</html>